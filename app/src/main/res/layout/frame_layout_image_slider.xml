<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="260dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:src="@color/textShadow" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/imageCardView"
                android:layout_width="92dp"
                android:layout_height="92dp"

                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="80dp"
                android:layout_alignParentStart="true"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/no_image" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="@color/textShadow"
                android:shadowRadius="2"
                android:textColor="@color/textColor"
                android:elevation="10dp"
                android:layout_margin="10dp"
                android:textStyle="bold"

                android:layout_below="@+id/imageCardView"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView"
                android:layout_toRightOf="@+id/imageCardView"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textColor"
                android:shadowColor="@color/textShadow"
                android:shadowRadius="2"
                android:elevation="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="80dp"
                android:text="Despicable Me 3"
                />
            <TextView
                android:elevation="10dp"
                android:id="@+id/ReleaseTextView"
                android:layout_below="@+id/titleTextView"
                android:layout_toRightOf="@+id/imageCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release "
                android:textColor="@color/textColor"
                android:shadowColor="@color/textShadow"
                android:shadowRadius="2"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/ratingsImage"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="10dp"
                android:src="@drawable/icons8"
                android:elevation="10dp"
                android:layout_toRightOf="@+id/imageCardView"
                android:layout_below="@+id/ReleaseTextView"/>
            <TextView
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:shadowColor="@color/textShadow"
                android:shadowRadius="2"
                android:layout_height="18dp"
                android:gravity="bottom"
                android:text="8.7"
                android:layout_toRightOf="@+id/ratingsImage"
                android:layout_below="@id/ReleaseTextView"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />


        </RelativeLayout>





</RelativeLayout>
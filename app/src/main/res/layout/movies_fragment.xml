<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/nowShowingTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="bottom"
            android:text="Now Showing"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/textColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/nowShowing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="5" />
    </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"

            android:layout_height="250dp">

            <TextView
                android:id="@+id/comingSoonTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_margin="5dp"
                android:gravity="bottom"
                android:text="Coming Soon"
                android:textStyle="bold"
                android:textColor="@color/textColor" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comingSoon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="5"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="275dp">

        <TextView
            android:id="@+id/popularMoviesTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="bottom"
            android:textStyle="bold"
            android:text="Most Popular Movies"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/textColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/popularMovies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="5"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="275dp">

            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="bottom"
                android:text="Genre"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="@color/textColor" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="5"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>